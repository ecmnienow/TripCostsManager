@inject IJSRuntime JSRuntime

<div class="modal @ModalClass @ExtraClass" tabindex="-1" role="dialog" style="display:@ModalDisplay" @onkeyup="@OnEsc" @ref="_element">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Title()</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="() => Close()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @if(ChildContent != null)
            {
                <div class="modal-body" style="background: #222 none repeat scroll 0 0;">
                    @ChildContent
                </div>
            }
            <div class="modal-footer" style="background: #222 none repeat scroll 0 0;">
                @switch (Buttons)
                {
                    case Buttons.SaveCancel:
                        <TCButton Label="Save" Type="EButtonType.Primary" OnClick="async () => await AcceptHandler()"></TCButton>
                        <TCButton Label="Cancel" Type="EButtonType.Error" OnClick="async () => Close()"></TCButton>
                        break;

                    case Buttons.SaveCancelCustom:
                        <div style="display: flex;text-align; justify-content: space-between; width: 100%;">
                            <TCButton Label="@CustomActionTitle" Type="EButtonType.Default" OnClick="async () => await CustomActionHandler()"></TCButton>
                            <div style="justify-content: flex-end; display: inline-flex;">
                                <TCButton Label="Salvar" Type="EButtonType.Primary" OnClick="async () => await AcceptHandler()"></TCButton>
                                &nbsp
                                <TCButton Label="Cancelar" Type="EButtonType.Error" OnClick="async () => Close()"></TCButton>
                            </div>
                        </div>
                        break;

                    case Buttons.OK:
                        <TCButton Label="OK" Type="EButtonType.Primary" OnClick="async () => Close()"></TCButton>
                        break;

                    case Buttons.YesNo:
                        <TCButton Label="Yes" Type="EButtonType.Primary" OnClick="async () => await AcceptHandler()"></TCButton>
                        <TCButton Label="No" Type="EButtonType.Error" OnClick="async () => Close()"></TCButton>
                        break;
                }
            </div>
        </div>
    </div>
</div>


@if (ShowBackdrop)
{
    <div class="modal-backdrop fade show"></div>
}